<%- partial('nav')%>
<%- partial('sitehead')%>

<main class="container" role="main">
  <% page.posts.each(function(post) { %>
  <article class="post">
    <header class="post-header">
      <span class="post-meta">
        <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, null) %></time>
        <% if (post.tags && post.tags.length){ %> on <% post.tags.forEach(function(tag) { %><a href='<%= config.root + tag.path %>' style='margin:0 5px;'><%= tag.name %></a><% }); %><% } %>
      </span>
      <h1 class="post-title"><a href="<%- config.root %><%- post.path %>"><%- post.title %></a></h1>
    </header>
    <section class="post-excerpt">
      <p>
      <% if (post.excerpt){ %>
        <%- post.excerpt %>
      <% } else { %>
        <%- post.content.replace(/<(?:.|\n)*?>/gm, '').substr(0, 220) %>
      <% } %>
      </p>
      <% if (theme.excerpt_link) { %>
      <p>
          <a href="<%- config.root %><%- post.path %>" class="excerpt-link"><%= theme.excerpt_link %>...</a>
      </p>
      <% } %>
    </section>
  </article>
  <% }); %>
  <nav id="page-nav">
    <%- paginator({mid_size: 5, prev_text: '<strong>&lt;</strong> <strong class="label label-default">Prev</strong>', next_text: '<strong class="label label-default">Next</strong> <strong>&gt;</strong>'}) %>
  </nav>
</main>
