<%- partial('nav')%>
<%- partial('sitehead')%>
<% var year, prev_year = 0, first = true; %>

<main class="container" role="main">
  <% page.posts.each(function(post) { %>
  <% year = post.date.toDate().getFullYear(); %>
    <% if (year !== prev_year) {%>
      </ul>
    <h2 class="archive-ul" data-toggle="collapse" data-target="#<%= year %>">
        <%= year %>&nbsp;<b class="caret"></b>
    </h2>
    <ul id="<%= year %>"class="collapse in">
    <% prev_year = year %>
    <% } %>
    <li class="listing-item">
      <h3 class="post-title">
        <a href="<%- config.root %><%- post.path %>"><%- post.title %></a>
      </h3>
      <small class="post-meta">
        <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, null) %></time>
      </small>
    </li>
  <% }); %>
    </ul>

  <% if (page.prev || page.next) { %>
  <nav class="pagination" role="pagination">
    <% if (page.prev) { %><a class="newer-posts" href="<%- config.root %><%- page.prev_link %>">← Newer Posts</a><% } %>
    <span class="page-number">Page <%- page.current %> of <%- page.total %></span>
    <% if (page.next) { %><a class="older-posts" href="<%- config.root %><%- page.next_link %>">Older Posts →</a><% } %>
  </nav>
  <% } %>
</main>
